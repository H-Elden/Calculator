{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe 生成活动文件",
			"command": "D:\\Program Files\\RedPanda-CPP\\MinGW64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				//源文件
				"-g",
				"${workspaceFolder}\\Src\\main.cpp",
				"${workspaceFolder}\\Src\\initialize.cpp",
				"${workspaceFolder}\\Src\\check.cpp",
				"${workspaceFolder}\\Src\\calculate.cpp",
				// 头文件目录
				"-I",
				"${workspaceFolder}\\Inc",
				// 编译输出文件
				"-o",
				"${workspaceFolder}\\build\\Calculator.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: D:\\Program Files\\RedPanda-CPP\\MinGW64\\bin\\g++.exe"
		}
	]
}